  },
  "item": [
    {
      "name": "Admin Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@carelypet.com\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/admin/auth/forgot-password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "auth",
            "forgot-password"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@carelypet.com\",\n  \"newPassword\": \"NewPass123!\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/admin/auth/reset-password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "auth",
            "reset-password"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@carelypet.com\",\n  \"otp\": \"123456\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/admin/auth/verify-otp",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "admin",
            "auth",
            "verify-otp"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin Change Password",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"OldPass123!\",\n  \"newPassword\": \"NewPass123!\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/admin/profile/password",
