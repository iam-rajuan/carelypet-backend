{
  "info": {
    "name": "Adoption Management (Admin)",
    "_postman_id": "c7d5a1c4-8f2e-4c7f-9f3a-0b3a5f4c6a12",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "const token = json?.data?.tokens?.accessToken;",
              "if (token) pm.collectionVariables.set('adminToken', token);"
            ]
          }
        }
      ]
    },
    {
      "name": "List Adoption Listings (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions?status=available",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions"],
          "query": [
            { "key": "status", "value": "available" }
          ]
        }
      }
    },
    {
      "name": "Create Adoption Listing (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions"]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "petName", "value": "Buddy", "type": "text" },
            { "key": "petType", "value": "dog", "type": "text" },
            { "key": "breed", "value": "husky", "type": "text" },
            { "key": "petAge", "value": "2", "type": "text" },
            { "key": "weightLbs", "value": "45", "type": "text" },
            { "key": "price", "value": "250", "type": "text" },
            { "key": "gender", "value": "male", "type": "text" },
            { "key": "trained", "value": "true", "type": "text" },
            { "key": "vaccinated", "value": "true", "type": "text" },
            { "key": "neutered", "value": "false", "type": "text" },
            { "key": "personality", "value": "[\"Friendly\",\"Energetic\"]", "type": "text" },
            { "key": "aboutPet", "value": "Playful and friendly.", "type": "text" },
            { "key": "shelterName", "value": "Carely Shelter", "type": "text" },
            { "key": "shelterPhone", "value": "555-000-1234", "type": "text" },
            { "key": "avatarIndex", "value": "0", "type": "text" },
            { "key": "healthRecords", "value": "[]", "type": "text" },
            { "key": "photos", "type": "file", "src": "" }
          ]
        }
      }
    },
    {
      "name": "Add Health Record (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/{{listingId}}/health-records",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "{{listingId}}", "health-records"]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "type", "value": "vaccination", "type": "text" },
            { "key": "recordDetails", "value": "{\"recordName\":\"Rabies\",\"batchLotNo\":\"A1\",\"otherInfo\":\"Annual\",\"cost\":\"450\",\"date\":\"2025-01-15\",\"nextDueDate\":\"2025-01-25\",\"reminder\":{\"enabled\":true,\"offset\":\"1 week\"}}", "type": "text" },
            { "key": "veterinarian", "value": "{\"designation\":\"Dr.\",\"name\":\"Jane Doe\",\"clinicName\":\"Carely Vet\",\"licenseNo\":\"LIC-123\",\"contact\":\"555-000-5678\"}", "type": "text" },
            { "key": "vitalSigns", "value": "{\"weight\":\"45\",\"temperature\":\"37.5\",\"heartRate\":\"90\",\"respiratory\":\"20\",\"status\":\"normal\"}", "type": "text" },
            { "key": "observation", "value": "{\"lookupObservations\":[\"Mind to check his vital regularly.\"],\"clinicalNotes\":\"All good\"}", "type": "text" },
            { "key": "files", "type": "file", "src": "" }
          ]
        }
      }
    },
    {
      "name": "List Health Records (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/{{listingId}}/health-records?type=vaccination",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "{{listingId}}", "health-records"],
          "query": [
            { "key": "type", "value": "vaccination" }
          ]
        }
      }
    },
    {
      "name": "List Adoption Requests (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/requests?status=all",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "requests"],
          "query": [
            { "key": "status", "value": "all" }
          ]
        }
      }
    },
    {
      "name": "Get Adoption Request (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/requests/{{requestId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "requests", "{{requestId}}"]
        }
      }
    },
    {
      "name": "Update Adoption Request Status (Admin)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/requests/{{requestId}}/status",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "requests", "{{requestId}}", "status"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"delivered\"\n}"
        }
      }
    },
    {
      "name": "Delete Adoption Request (Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/requests/{{requestId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "requests", "{{requestId}}"]
        }
      }
    },
    {
      "name": "Delete Adoption Listing (Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/adoptions/{{listingId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "adoptions", "{{listingId}}"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1" },
    { "key": "adminEmail", "value": "admin@example.com" },
    { "key": "adminPassword", "value": "change-me" },
    { "key": "adminToken", "value": "" },
    { "key": "listingId", "value": "" },
    { "key": "requestId", "value": "" }
  ]
}
