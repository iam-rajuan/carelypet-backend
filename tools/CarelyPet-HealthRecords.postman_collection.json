					"name": "Add Vaccination Record",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"let res = pm.response.json();",
									"let records = res?.data?.healthRecords || [];",
									"if (records.length) {",
									"    let last = records[records.length - 1];",
									"    if (last?._id || last?.id) {",
									"        pm.environment.set(\"health_record_id\", last._id || last.id);",
									"        console.log(\"health_record_id saved.\");",
									"    }",
									"}",
									""
								],
								"type": "text/javascript"
							}
